{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^4.1.1"
  },
  "scripts": {
    "server:dev": "yarn workspace @todolist/server dev",
    "client:dev": "yarn workspace @todolist/client dev",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "server:build": "yarn workspace @todolist/server build",
    "client:build": "yarn workspace @todolist/client build",
    "build": "concurrently \"yarn server:build\" \"yarn client:build\"",
    "server:start": "yarn workspace @todolist/server start",
    "client:start": "yarn workspace @todolist/client start",
    "start": "concurrently \"yarn server:start\" \"yarn client:start\"",
    "server:lint": "yarn workspace @todolist/server lint",
    "client:lint": "yarn workspace @todolist/client lint",
    "lint": "concurrently \"yarn server:lint\" \"yarn client:lint\"",
    "server:format": "yarn workspace @todolist/server format",
    "client:format": "yarn workspace @todolist/client format",
    "format": "concurrently \"yarn server:format\" \"yarn client:format\"",
    "server:test": "yarn workspace @todolist/server test",
    "client:test": "yarn workspace @todolist/client test",
    "test": "concurrently \"yarn server:test\" \"yarn client:test\"",
    "server:test:watch": "yarn workspace @todolist/server test:watch",
    "client:test:watch": "yarn workspace @todolist/client test:watch",
    "test:watch": "concurrently \"yarn server:test:watch\" \"yarn client:test:watch\"",
    "server:test:cov": "yarn workspace @todolist/server test:cov",
    "client:test:cov": "yarn workspace @todolist/client test:cov",
    "test:cov": "concurrently \"yarn server:test:cov\" \"yarn client:test:cov\""
  },
  "dependencies": {
    "@nestjs/graphql": "^7.9.1",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.19.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "pg": "^8.5.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29"
  }
}
